const { title = "María Pozo · Teatro y Educación Emocional" } = Astro.props;
// Importar estilos como módulo
import '../styles/main.sass';

const baseUrl = import.meta.env.BASE_URL;

// Obtener la URL actual para determinar la página activa
const currentPath = Astro.url.pathname;

const isActive = (path: string) => {
  // Para la página principal (más específica)
  if (path === baseUrl) {
    return currentPath === baseUrl || currentPath === '/' || currentPath === baseUrl.replace(/\/$/, '');
  }
  
  // Para otras páginas
  const cleanPath = path.replace(baseUrl, '').replace(/\/$/, '');
  const cleanCurrentPath = currentPath.replace(baseUrl, '').replace(/\/$/, '');
  
  return cleanCurrentPath.startsWith(cleanPath) && cleanPath.length > 0;
};
